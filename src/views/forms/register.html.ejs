
<!-- Form Box -->
<div class="form-box">
    <form action="<%= submitUserPath %>" method="post">
        <a href="home.html"><img src="<%= assetPath('logo-full.png') %>" alt="Company logo"></a>
        <h4>Sign up your account</h4>

        <% if (locals.errors) { %>
            Something is wrong with the creation:
            <ul>
              <% errors.forEach(error => { %>
                <li><%= error.message %></li>
              <% }) %>
            </ul>
          <% } %>
          
        <!-- Input Box (Contiene todos los label-input boxes) -->
        <div class="input-box">
            <div class="label-input-box">
                <label for="username">Username</label><br>
                <input type="text" class="register-form-input" name="username" placeholder="username"><br>
            </div>

            <div class="label-input-box">
                <label for="email">Email</label><br>
                <input type="text" class="register-form-input" name="mail" placeholder="email@example.com"><br>
            </div>

            <div class="label-input-box">
                <label for="Objective">Objective</label><br>
                <input type="objective" class="register-form-input" name="objective"  placeholder="What's your goal?"><br>
            </div>

            <div class="label-input-box">
                <label for="password">Password</label><br>
                <input type="password" class="register-form-input" name="password" placeholder="**********"><br>
            </div>

            <div class="label-input-box">
                <label for="confirm-password">Confirm password</label><br>
                <input type="password" class="register-form-input" name="confirm-password" placeholder="**********"><br>
            </div>
        </div>

            <input type="submit" class="form-submit-button" value="Sign me up">

        <!-- Submit Button -->
        <p>
            Already have an account?
            <a class="white-link" href="page-login.html">Sign in</a>
        </p>
    </form>
</div>
