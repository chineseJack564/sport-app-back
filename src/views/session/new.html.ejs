<!-- Form Box -->
<div class="form-box">
    <form action=<%=submitPath%>   method="POST">
         <% if (locals.error) { %>
          <div> <%= error %> </div>
         <% } %>

        <a href=""><img src=<%= assetPath('logo-full.png') %> alt="Company logo"></a>

        <h4>Sign in your account</h4>

        <div class="input-box">
            <div class="label-input-box">
                <label for="mail">Email</label><br>
                <input type="text" class="register-form-input" id="mail" name="mail"><br>
            </div>
            <div class="label-input-box">
                <label for="password">Password</label><br>
                <input type="password" class="register-form-input" id="password" name="password"><br>
            </div>
        </div>

        <div class="remember-box">
            <input type="checkbox" class="password_checkbox" value="remember_password">
            <label>Remember my preference</label>
            <a class="white-link" id="forgot_password" href="">Forgot Password?</a>
        </div>

        <input type="submit" class="form-submit-button" value="Sign me in"><br>

        <p>
            Don't you have an account?
            <a class="white-link" href="">Sign up</a>
        </p>
    </form>
</div>